<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -AppLanches </title> 
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min-alternativo.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AplicacaoInterativa.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-6.1.1-web/css/all.css" asp-append-version="true" />
</head>
<body>
    <header class="color-background">
       <div class="container">
        <nav class=" navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/AppLanches_logo-removebg-preview.png"/></a>
        
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                
              <ul class="menu-hover navbar-nav">
                 <form class="form-busca" asp-controller="Lanche" asp-action="Search" method="get">
                      <input type="text" class="form-control" placeholder="Procurar produto" name="searchString" value="@ViewData["searchString"]" />           
                        <button class="btn-busca"><i class="fa-solid fa-magnifying-glass"></i></button>
                 </form>
                  
                <li class="nav-item component">
                    @await Component.InvokeAsync("CategoriaMenu")
                 </li>
               <li class="nav-item component">
                   <partial name="_LoginPartial"/>
               </li>
               <li class="nav-item component">
                    @await Component.InvokeAsync("CarrinhoCompraResumo")
                </li>
              </ul>
            </div>
        </nav>
        </div>
    </header>
     
        <main class="main">
            @RenderBody()
        </main>

    <footer class="color-background">
    <div class="container d-flex flex-wrap justify-content-around align-items-center py-3 my-4 ">
        <p class="col-md-4 mb-0 text-muted">Projeto Acadêmico - 2022 </p>

    <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
     <img src="~/images/AppLanches_logo-removebg-preview.png"/>
    </a>

    <ul class="nav col-md-4 justify-content-end">
       
                <li class="nav-item">
                  <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
                </li>
                
    </ul>
    </div>
  </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
